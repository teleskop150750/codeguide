{
	"env": {
		"browser": true,
		"es2020": true
	},
	"extends": [
		"airbnb-base"
	],
	"parserOptions": {
		"ecmaVersion": 11,
		"sourceType": "module"
	},
	"parser": "babel-eslint",
	"rules": {
		"max-len": [
			1,
			{
				"code": 80,
				"ignoreComments": true,
				"ignoreTrailingComments": true,
				"ignoreUrls": true,
				"ignoreStrings": true,
				"ignoreTemplateLiterals": true,
				"ignoreRegExpLiterals": true
			}
		],
		"no-plusplus": [
			2,
			{
				"allowForLoopAfterthoughts": true
			}
		]
	}
}